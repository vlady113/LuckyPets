<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_popup_background"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/action_ver_tarjetas_guardadas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Tarjetas guardadas"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/action_my_transaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Mis transacciones"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />

</LinearLayout>
