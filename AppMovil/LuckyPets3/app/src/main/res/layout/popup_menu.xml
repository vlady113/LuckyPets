<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_popup_background"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/action_my_reservations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Reservas"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/action_my_posts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Mis anuncios"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/action_my_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Datos personales"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/action_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Ayuda"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/action_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Acerca de"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />

    <View
        android:layout_width="170dp"
        android:layout_height="1dp"
        android:background="@color/custom_menu_text_color"
        android:layout_marginVertical="8dp" />

    <TextView
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Cerrar sesiÃ³n"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />
</LinearLayout>