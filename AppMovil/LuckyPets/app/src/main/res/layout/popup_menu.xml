<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_popup_background"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:id="@+id/action_my_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Mis datos personales"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/action_change_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Cambiar correo electrónico"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/action_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Cambiar contraseña"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/action_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Acerca de"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/logOut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/merriweather_bold"
        android:padding="12dp"
        android:text="Cerrar sesión"
        android:textColor="@color/custom_menu_text_color"
        android:textSize="20dp" />
</LinearLayout>
